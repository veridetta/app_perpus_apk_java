<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BookFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:gravity="center"
                android:layout_gravity="center|top"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/logo_perpus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applikasi Perpustakaan"
                    android:textColor="@color/blue_800"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMPN 1 Rembang"
                    android:textColor="@color/blue_800"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.smpn1rembang.sch.id"
                    android:textColor="@color/blue_800"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_29sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Kategori"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_all"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:text="Semua"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_mat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mat"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_ipa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IPA"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_ips"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="IPS"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_agama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:text="P. Agama"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_sby"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Seni Budaya"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_indo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_12sdp"
                                app:cardElevation="@dimen/_4sdp"
                                app:cardMaxElevation="@dimen/_3sdp"
                                app:cardUseCompatPadding="true"
                                app:cardBackgroundColor="@color/blue_200">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingTop="@dimen/_7sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="B. Indo"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rc_book"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <include layout="@layout/ly_loading"/>
    </RelativeLayout>
</FrameLayout>